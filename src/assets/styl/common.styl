@import './fonts.css'
@import './bootstrap.css'
@import './magnific-popup.css'
@import '../../../node_modules/swiper/css/swiper.css'

*
    box-sizing border-box
    outline none !important

a
    &:hover, &:visited, &:active, &:focus
        text-decoration none

h2
    color #285e92
    font-size 32px
    font-weight 700
    line-height 32px
    margin-top 0
    margin-bottom 25px

body
    font-size 16px
    line-height 24px
    color #285e92

.blured
    header, main, footer
        filter blur(5px)

.logo
    display block
    width: 212px
    height: 131px
    background transparent url(../img/logo.png) center center no-repeat
    background-size contain

.title
    color #000
    font-family 'Exo 2'
    font-weight 700
    margin 0
    &_h1
        font-size 48px
        margin-bottom 40px

.preloader
    width 150px
    height 150px
    position absolute
    left 50%
    top 50%
    transform translate(-50%, -50%)

.footer-menu
    list-style none
    padding 0
    margin 0
    margin-top 93px
    &__link
        color rgba(#000, .5)
        font-size 16px
    &__item+ &
        &__item
            margin-top 13px



.p-header 
    color: #fff
    background-color #5296d8
    &:before 
        content ''
        position absolute
        background-image radial-gradient(circle 457px at center, rgba(255,255,255,.3) 0%, transparent 100%, transparent 100%)
        width 100%
        height 100%
        top -15%
    &__wrapper
        position relative
        padding 30px 0
        background-image linear-gradient(to top, rgba(255, 255, 255, 0) 0%, transparent 100%)
    &__holder
        display inline-block
        float right
    &__bg
        position absolute
        width 100%
        height 115%
        bottom -15%
        left 0
        background transparent url('../img/milk-bg.png') bottom center no-repeat
        background-size cover
    &__item
        vertical-align top
        display inline-block
    &__item+ &
        &__item 
            margin-left 28px
    &__contacts
        margin-top 20px
        a
            line-height 20px
    &__email
        font-weight 200
    &__burger
        img
            width 18px
            height 18px
    &__call
        text-decoration underline
    &__title
        margin 73px 0 250px
        font-size 48px
        line-height 48px
        font-weight 700
        p
            margin 0
    &__icon
        width 42px
        height 42px
        text-align center
        line-height 42px
        background-color #f8fafc
        border-radius 50%
        display inline-block
        margin 30px 0
    &__title_ligth  
        color #c2e4ff
        font-size 36px
        font-weight 200
    &__menu
        .menu__link
            font-size 16px
            font-weight 700
            line-height 40px
            color #fff
            transition 400ms color
            &:hover 
                color: rgba(#fff, .7)
    
    &__burger, &__search
        opacity .7
        transition opacity 400ms
        outline none !important
        img 
            margin-top -3px
        &:hover
            opacity 1
    &__contacts
        a
            display block
            color #fff

.breadcrumbs
    list-style none
    padding 0
    font-size 0
    line-height 0
    margin 0
    &__item
        display inline-block
        &:after
            font-family 'FontAwesome'
            display inline-block
            margin-left 5px
            margin-right 5px
            font-size 9px
            font-weight 400
            line-height 20px
            content '\f061'
        &:last-child
            &:after
                content '\f063'
    &__link
        color #fff
        font-size 14px
        font-weight 300
        line-height 20px
        opacity .7
        transition opacity 400ms
        &:hover 
            color #fff
            opacity 1
        
.p-footer
    background-color rgba(#f1f1f0, .4)
    color #000
    font-size 16px
    font-weight 400
    line-height 28px
    padding 130px 0
    p
        font-family 'Andika'
        margin 0
    a
        color #000
        &:hover
            text-decoration underline

    &__title
        display block
        margin-bottom 40px



.menu
    padding 30px 0
    &__item
        display inline-block
    &__item+ &
        &__item
            &:before
                content ''
                display inline-block
                width 2px
                height 14px
                margin 0 7px 0 5px
                vertical-align middle
                background #7ebbed


.mobile-menu
    position fixed
    right 0
    top 0
    bottom 0
    background-color #5296d8
    z-index 3
    max-width 320px
    transform translateX(100%)
    box-shadow 0 0 10px rgba(#000, .1)
    &.loaded
        transition transform 500ms ease-out
    &.active        
        transform translateX(0px)
    &__bg
        position absolute
        width 100%
        height 150px
        bottom 0
        left 0
        background transparent url('../img/milk-bg.png') bottom center no-repeat
        background-size cover
    &__logo
        display block
        margin 30px auto 0
    &__close 
        position absolute
        left 50%
        cursor pointer
        bottom 20px
        transform translateX(-50%)
        text-transform uppercase
        font-size 7px
        text-align center
        color #514a46    
        img
            display block
            margin-bottom 4px

    .menu
        &__item 
            display block
            &:before
                width 90%
                height 2px
                display block
                margin auto
        &__link
            display block
            color #fff
            width 90%
            margin auto
            line-height 45px
            &:hover, &:active   
                background-color rgba(#fff, .4)
                

.search-box
    visibility hidden
    opacity 0
    position fixed
    left 0
    top 0
    right 0
    bottom 0
    background rgba(255,255,255,.9)
    z-index 3
    padding 0 20px
    transition opacity 600ms ease-out
    &.active
        visibility visible
        opacity 1
    &__input
        position absolute
        left 50%
        top 50%
        transform translate(-50%, -50%)
        background transparent
        font-size 38px
        display block
        padding 15px 0
        outline none !important
        width 100%
        border none
        color #5a97d7
        border-bottom 2px solid rgba(#514a46, .5)
        text-align center
        max-width 390px
    &__action-item
        display inline-block
        vertical-align middle
        text-transform uppercase
        font-size 7px
        text-align center
        color #514a46    
        cursor pointer
        img
            display block
            margin-bottom 4px
        &:first-child
            margin-right 60px
    &__submit
        background transparent
        border none
    &__action   
        text-align center
        position absolute
        left 50%
        bottom 20px
        transform translateX(-50%)

.mobile-menu-lock
    position fixed
    left 0
    top 0
    right 0
    bottom 0
    display none
    z-index 2

.quick-menu, .quick-catalog
    &__item
        display block
        height 360px
        padding 41px 0 0 34px
        overflow hidden
        position relative
    &__bg
        position absolute
        left 0
        top 0
        width 101%
        height 100%
        transition transform 300ms ease-out, filter 300ms ease-out
        background steelblue
        background-repeat no-repeat
        background-size cover
        background-position center center

.quick-menu
    &__item
        color #494142
        font-size 24px
        line-height 32px
        font-weight 200
        &:hover, &:focus, &:active
            color #494142
        strong 
            font-weight 700
            display block
        &_style_white
            color #fff
            &:hover, &:focus, &:active
                color #fff
        &_style_green 
            color #345e67
            &:hover, &:focus, &:active
                color #345e67
    &__item:hover &
        &__bg
            transform scale(1.1, 1.1)
            filter blur(2px) 
    &__caption
        position relative
.quick-catalog
    margin-bottom 100px
    &__item
        color #fff
        font-size 48px
        font-weight 200
        margin-bottom 30px
        &:hover, &:focus, &:active
            color #fff
        span
            display block
        &_style_blue
            color #173862
            &:hover, &:focus, &:active
                color #173862
        &_style_gold
            color #8c6925
            &:hover, &:focus, &:active
                color #8c6925
        &_style_dark
            color #514a46
            &:hover, &:focus, &:active
                color #514a46
        &_size_small
            font-size 24px
            font-weight 400
    &__item:hover &
        &__bg
            transform scale(1.1, 1.1)
            filter blur(2px) 
    &__caption
        position absolute
        width 100%
        height 68px
        left 34px
        bottom 21px


.popup
    &__title, &__description
        text-align center
        color #285e92
    &__title
        font-size 32px
        font-weight 700
        line-height 32px
        margin-bottom 20px
    &__description
        font-size 16px
        font-weight 300
        line-height 24px
        margin-bottom 35px

.brand-input, .brand-textarea
    line-height 56px
    height 56px
    background-color #e9eff4
    border 2px solid #e9eff4
    border-radius 30px
    min-width 200px
    position relative
    transition background-color 400ms ease-out, box-shadow 400ms ease-out, border-color 400ms ease-out
    &.error
        border-color #ff0042
    input, textarea 
        width 100%
        background transparent
        padding 0 24px
        border none
        outline none
        color #285e92
        font-size 16px
        font-weight 700
        line-height 60px
    label
        position absolute
        left 24px
        top 0
        color #285e92
        font-size 16px
        font-weight 700
        line-height 52px
        transform-origin 0 0
        transition transform 200ms ease-out, line-height 200ms ease-out
    &.active
        background-color #f9fbfd
        box-shadow inset 0 5px 25px rgba(20, 61, 99, 0.15)
        label
            transform scale(0.7)
            line-height 35px

.brand-input
    .help-block
        position absolute
        top 15px
        left 25px
        font-size 12px
        color #ff0042
        pointer-events none

.brand-textarea
    height auto
    textarea
        resize none
        line-height 20px
        padding 24px

.brand-form
    &__item + &
        &__item
            margin-top 14px

.brand-button
    border none
    display block
    margin auto
    max-width 440px
    height 60px
    background-color #3479b9
    border-radius 30px
    font-size 16px
    font-weight 700
    padding 20px 0
    text-align center
    width 100%
    color #fff
    &_inverse
        margin 0
        display inline-block
        border 2px solid #285e91
        color #285e91
        border-radius 30px
        padding 18px 60px 20px
        background transparent
        transition border 400ms ease-out, background 400ms ease-out, color 400ms ease-out
        &:hover 
            background #285e91
            color #fff


.new-item-label
    position relative
    &:before
        content 'Новинка'
        display block
        width 79px
        height 42px
        position absolute
        top -1px
        left 20px
        font-size 14px
        line-height 32px
        text-align center
        color #fff
        background-image url('../img/new-item-label-bg.svg')
        background-size cover
        background-repeat no-repeat
        z-index 1


@media screen and (min-width 992px) and (max-width 1199px)
    .p-header
        &__bg
            height 70%
    .quick-menu, .quick-catalog
        &__item
            height 293px
    .quick-catalog
        &__item
            font-size 40px
            &_size_small
                font-size 24px
                font-weight 400

@media screen and (min-width 768px) and (max-width 991px)
    .p-header
        &__contacts
            margin-left 163px
        &__title
            font-size 44px
            margin-bottom 200px
            &_ligth
                font-size 32px
        &__bg
            height 60%
    .quick-menu
        &__item
            height 250px
            font-size 18px
            line-height 26px
    .p-footer
        padding 70px 0

@media screen and (max-width 767px)
    h2
        font-size 24px
        line-height 24px
    .p-header
        &__contacts
            margin-left 163px
        &__title
            font-size 30px
            margin-bottom 200px
            line-height 38px
            &_ligth
                font-size 22px
        &__bg
            height 60%
    .quick-menu
        margin-bottom 60px
        &__item
            height 390px
            margin-bottom 15px
    .p-footer
        padding 65px 0
    .footer-menu
        margin-top 30px
    .quick-catalog
        margin-bottom 50px
        &__item
            margin-bottom 15px
            font-size 38px
            &_size_small
                font-size 24px

    .search-box
        &__input
            max-width 250px
            font-size 28px
            padding 10px 0
        

    


@media screen and (max-width 465px)
    .logo
        width 140px
    .p-header
        &__icon
            margin 40px 0
        &__title
            margin-top 0px
            margin-bottom 100px
        &__title_ligth
            line-height 22px
        &__bg
            height 40%
            bottom 0
        &__burger
            margin-left 15px
        &__item+ &
            &__item
                margin-left 10px
    .quick-catalog
        margin-bottom 50px
        &__item
            font-size 38px
            &_size_small
                font-size 24px
    .quick-menu
        margin-bottom 60px
        &__item
            height 290px
            margin-bottom 15px
            &_size_small
                font-size 24px
    .brand-button_inverse
        padding 18px 15px 20px
    .p-footer
        padding 65px 0
    .footer-menu
        margin-top 30px

@keyframes BGZoomOut 
    from
        background-size 110%
    to
        background-size cover

@keyframes BGZoomIn
    from
        background-size cover
    to
        background-size 110%
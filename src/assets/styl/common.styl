@import './fonts.css'
@import './bootstrap.css'

*
    box-sizing border-box

a
    &:hover, &:visited, &:active, &:focus
        text-decoration none

.logo
    display block
    width: 212px
    height: 131px
    background transparent url(../img/logo.png) center center no-repeat
    background-size contain

.title
    color #000
    font-family 'Exo 2'
    font-weight 700
    margin 0
    &_h1
        font-size 48px
        margin-bottom 40px

.footer-menu
    list-style none
    padding 0
    margin 0
    margin-top 93px
    &__link
        color rgba(#000, .5)
        font-size 16px
    &__item+ &
        &__item
            margin-top 13px



.p-header 
    color: #fff
    background-color #5296d8
    &__wrapper
        position relative
        padding 30px 0
        background-image linear-gradient(to top, rgba(255, 255, 255, 0) 0%, transparent 100%)
    &__bg
        position absolute
        width 100%
        height 95%
        bottom 0
        left 0
        background transparent url('../img/milk-bg.png') bottom center no-repeat
        background-size cover
    &__item
        vertical-align top
        display inline-block
    &__item+ &
        &__item 
            margin-left 28px
    &__contacts
        margin-top 20px
        a
            line-height 20px
    &__email
        font-weight 200
    &__burger
        img
            width 18px
            height 18px
    &__call
        text-decoration underline
    &__title
        margin 73px 0 300px
        font-size 48px
        font-weight 700
        p
            margin 0
    &__icon
        width 42px
        height 42px
        text-align center
        line-height 42px
        background-color #f8fafc
        border-radius 50%
        display inline-block
        margin 30px 0
    &__title_ligth  
        color #c2e4ff
        font-size 36px
        font-weight 200
    &__menu
        .menu__link
            font-size 16px
            font-weight 700
            line-height 40px
            color #fff
            transition 400ms color
            &:hover 
                color: rgba(#fff, .7)
    &__contacts
        a
            display block
            color #fff

.p-footer
    background-color rgba(#f1f1f0, .4)
    color #000
    font-size 16px
    font-weight 400
    line-height 28px
    padding 130px 0
    p
        font-family 'Andika'
        margin 0
    a
        color #000
        &:hover
            text-decoration underline

    &__title
        display block
        margin-bottom 40px



.menu
    padding 30px 0
    &__item
        display inline-block
    &__item+ &
        &__item
            &:before
                content ''
                display inline-block
                width 2px
                height 14px
                margin 0 7px 0 5px
                vertical-align middle
                background #7ebbed


.quick-menu, .quick-catalog
    &__item
        display block
        height 360px
        padding 41px 0 0 34px
        overflow hidden
        position relative
    &__bg
        position absolute
        left 0
        top 0
        width 100%
        height 100%
        transition transform 300ms ease-out, filter 300ms ease-out
        background steelblue
        background-repeat no-repeat
        background-size cover
        background-position center center

.quick-menu
    &__item
        color #494142
        font-size 24px
        line-height 32px
        font-weight 200
        &:hover, &:focus, &:active
            color #494142
        strong 
            font-weight 700
            display block
        &_style_white
            color #fff
            &:hover, &:focus, &:active
                color #fff
        &_style_green 
            color #345e67
            &:hover, &:focus, &:active
                color #345e67
    &__item:hover &
        &__bg
            transform scale(1.1, 1.1)
            filter blur(2px) 
    &__caption
        position relative
.quick-catalog
    margin-bottom 100px
    &__item
        color #fff
        font-size 48px
        font-weight 200
        margin-bottom 30px
        &:hover, &:focus, &:active
            color #fff
        span
            display block
        &_style_blue
            color #173862
            &:hover, &:focus, &:active
                color #173862
        &_style_gold
            color #8c6925
            &:hover, &:focus, &:active
                color #8c6925
        &_style_dark
            color #514a46
            &:hover, &:focus, &:active
                color #514a46
        &_size_small
            font-size 24px
            font-weight 400
    &__item:hover &
        &__bg
            transform scale(1.1, 1.1)
            filter blur(2px) 
    &__caption
        position absolute
        width 100%
        height 68px
        overflow hidden
        left 34px
        bottom 21px


@media screen and (min-width 992px) and (max-width 1199px)
    .p-header
        &__bg
            height 70%
    .quick-menu, .quick-catalog
        &__item
            height 293px
    .quick-catalog
        &__item
            font-size 40px
            &_size_small
                font-size 24px
                font-weight 400

@media screen and (min-width 768px) and (max-width 991px)
    .p-header
        &__contacts
            margin-left 163px
        &__title
            font-size 44px
            margin-bottom 200px
            &_ligth
                font-size 32px
        &__bg
            height 60%
    .quick-menu
        &__item
            height 250px
            font-size 18px
            line-height 26px

@media screen and (max-width 767px)
    .p-header
        &__contacts
            margin-left 163px
        &__title
            font-size 34px
            margin-bottom 200px
            &_ligth
                font-size 22px
        &__bg
            height 60%
    .quick-menu
        margin-bottom 60px
        &__item
            height 390px
            margin-bottom 15px
    .p-footer
        padding 65px 0
    .footer-menu
        margin-top 30px
    .quick-catalog
        margin-bottom 50px
        &__item
            margin-bottom 15px
            font-size 38px


@media screen and (max-width 465px)
    .logo
        width 140px
    .p-header
        &__icon
            margin 40px 0
        &__title
            margin-top 40px
            margin-bottom 100px
        &__bg
            height 40%
        &__burger
            margin-left 39px
        &__item+ &
            &__item
                margin-left 10px
    .quick-catalog
        margin-bottom 50px
        &__item
            font-size 38px
    .quick-menu
        margin-bottom 60px
        &__item
            height 290px
            margin-bottom 15px

    .p-footer
        padding 65px 0
    .footer-menu
        margin-top 30px

@keyframes BGZoomOut 
    from
        background-size 110%
    to
        background-size cover

@keyframes BGZoomIn
    from
        background-size cover
    to
        background-size 110%
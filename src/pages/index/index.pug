doctype html
html
    head
        meta(charset="UTF-8")
        title АО "Приморско-Ахтарский молочный завод" ТМ «ТВОРОГОВЪ»
        meta(name="description", content="")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1, maximum-scale=1")
    body
        include ../templates/header
        +header('АО "Приморско-Ахтарский молочный завод"', 'ТМ «ТВОРОГОВЪ»')
        
        include ../templates/mobile-menu

        main.index
            section.p-section
                .container
                    .quick-menu.index__quick-menu
                        .row
                            .col-sm-4
                                a.quick-menu__item(href="#")
                                    .quick-menu__bg(style="background-image: url('" + require("../../assets/img/about-bg.jpg") + "')")
                                    .quick-menu__caption
                                        span О нашей
                                            strong Компании
                            .col-sm-4
                                a.quick-menu__item.quick-menu__item_style_white(href="#")
                                    .quick-menu__bg(style="background-image: url('" + require("../../assets/img/catalog-bg.jpg") + "')")
                                    .quick-menu__caption
                                        span Каталог
                                            strong Продукции
                            .col-sm-4
                                a.quick-menu__item.quick-menu__item_style_green(href="#")
                                    .quick-menu__bg(style="background-image: url('" + require("../../assets/img/partners-bg.jpg") + "')")
                                    .quick-menu__caption
                                        span Партнерам и 
                                            strong Дистрибьюторам
            section.p-section
                .container
                    h1.p-section__title.title.title_h1 Наша продукция
                    .quick-catalog.index__quick-catalog
                        .row
                            .col-sm-6.col-md-4
                                a.quick-catalog__item(href="#") 
                                    .quick-catalog__bg(style="background-image: url('" + require("../../assets/img/products-milk-bg.jpg") + "')")
                                    .quick-catalog__caption Молоко
                            .col-sm-6.col-md-4
                                a.quick-catalog__item.quick-catalog__item_style_blue(href="#") 
                                    .quick-catalog__bg(style="background-image: url('" + require("../../assets/img/products-sour-cream-bg.jpg") + "')")
                                    .quick-catalog__caption Сметана
                            .col-sm-6.col-md-4
                                a.quick-catalog__item.quick-catalog__item_style_gold(href="#") 
                                    .quick-catalog__bg(style="background-image: url('" + require("../../assets/img/products-ice-cream-bg.jpg") + "')")
                                    .quick-catalog__caption Мороженое
                            .col-sm-6.col-md-4
                                a.quick-catalog__item.quick-catalog__item_style_dark(href="#") 
                                    .quick-catalog__bg(style="background-image: url('" + require("../../assets/img/products-butter-bg.jpg") + "')")
                                    .quick-catalog__caption Масло
                            .col-sm-6.col-md-4
                                a.quick-catalog__item.quick-catalog__item_style_dark(href="#") 
                                    .quick-catalog__bg(style="background-image: url('" + require("../../assets/img/products-cottage-cheese-bg.jpg") + "')")
                                    .quick-catalog__caption Творог
                            .col-sm-6.col-md-4
                                a.quick-catalog__item.quick-catalog__item_size_small.quick-catalog__item_style_dark(href="#") 
                                    .quick-catalog__bg(style="background-image: url('" + require("../../assets/img/products-sour-milk-production-bg.jpg") + "')")
                                    .quick-catalog__caption
                                        span Кисломолочная 
                                        | продукция

        include ../templates/footer 
        include ../templates/recall-form
        include ../templates/search-box


